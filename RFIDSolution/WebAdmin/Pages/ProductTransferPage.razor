<div class="card m-2 w-100">
    <div class="row">
        <div class="col-md-2">
            <div class="row h-100 align-items-center">
                <RFReaderConnect @ref="readerConnecter" AntennaId="AntenaId" Size="12" OnRead="OnTagRead"></RFReaderConnect>
            </div>
        </div>
        <div class="col-md-10 ">
            <div class="card">
                <div class="card-header p-0">
                    <ul class="nav nav-tabs w-100">
                        <li class="nav-item p-0 hand" @onclick="() => isTransferIn = false">
                            <a class="nav-link text-danger @(isTransferIn? "" : "active")"><span class="oi oi-arrow-circle-right me-1"></span> TRANSFER OUT</a>
                        </li>
                        <li class="nav-item p-0 hand" @onclick="() => isTransferIn = true">
                            <a class="nav-link text-success @(isTransferIn? "active" : "")">
                                <span class="oi oi-arrow-circle-left me-1"></span>TRANSFER IN
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    @if (isTransferIn)
                    {
                        <h3 class="text-success" style="font-weight: bold">TRANSFER IN</h3>
                        <!--Transfer in-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <FormInputText Title="Return by" @bind-Text="@transferInModel.RETURN_BY" Size="12" Required="true" InValidFeedBack="Please enter return user"></FormInputText>
                                            <div class="col-md-12">
                                                <label>Note</label>
                                                <textarea value="@transferInModel.RETURN_NOTE" @onchange="(e) => transferInModel.RETURN_NOTE = e.Value.ToString()" rows="5" class="form-control"></textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-12 mt-2 d-flex">
                                        <button class="btn btn-success btn-lg me-4" @onclick="() => transferIn()"><span class="oi oi-arrow-circle-left me-1"></span> Transfer In</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!--Transfer out-->
                        <Form OnValidSubmit="async () => { await transferOut(); }">
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 class="text-danger" style="font-weight: bold">TRANSFER OUT</h3>
                                    <div class="row">
                                        <FormInputText Title="Transfer reason" @bind-Text="@transferOutModel.TRANSFER_REASON" Required="true" Size="12" InValidFeedBack="Please enter transfer reason"></FormInputText>
                                        <FormInputText Title="Transfer by" @bind-Text="@transferOutModel.TRANSFER_BY" Required="true" Size="3" InValidFeedBack="Please enter transfer user"></FormInputText>
                                        <div class="col-md-3">
                                            <SelectSearch Value="@transferOutModel.TRANSFER_DEPT_ID" ValueChanged="(e) => { transferOutModel.TRANSFER_DEPT_ID = e; transferOutModel.TRANSFER_TO = departments.FirstOrDefault(x => x.DEPT_ID == transferOutModel.TRANSFER_DEPT_ID)?.DEPT_NAME; }" 
                                                          Title="Transfer to" InvalidFeedBack="@("Please select a valid department")"
                                                          PlaceHolder="Choose department" Items="departments" Requried="true" TItem="DepartmentResponse" TValue="int?">
                                                <ItemTemplate>
                                                    <option value="@context.DEPT_ID">@context.DEPT_NAME</option>
                                                </ItemTemplate>
                                            </SelectSearch>
                                        </div>
                                        <FormInputText Title="Document no" @bind-Text="@transferOutModel.REF_DOC_NO" Size="3" Disabled="true"></FormInputText>
                                        <FormInputText Title="Document date" @bind-Text="@transferOutModel.REF_DOC_DATE" Size="3" Disabled="true"></FormInputText>
                                        <div>
                                            <label>Note</label>
                                            <textarea value="@transferOutModel.TRANSFER_NOTE" @onchange="(e) => transferOutModel.TRANSFER_NOTE = e.Value.ToString()" rows="3" class="form-control"></textarea>
                                        </div>
                                        <div class="col-md-12 mt-2 d-flex">
                                            <button type="submit" class="btn btn-danger btn-lg"><span class="oi oi-arrow-circle-right me-1"></span> Transfer Out</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 text-center">
                                    <div style="overflow-y: auto;display: flex;flex-direction: column;align-items: center;background: #f4f5f8; max-height: 100%; max-width: 500px" class="py-4">
                                        <TransferSheet model="transferOutModel" products="validProducts" DivId="@divId"></TransferSheet>
                                    </div>
                                </div>
                            </div>
                        </Form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="m-2">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h5 class="text-body m-0">SCAN RESULTS - Total: <span class="text-success">@products.Count</span></h5>
                    <div class="spacer"></div>
                    <button class="float-end btn btn-secondary" @onclick="() => { products.Clear(); }"><span class="oi oi-delete"></span> CLEAR SCAN RESULT</button>
