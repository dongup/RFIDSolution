                    <tfoot></tfoot>
                </table>
            </div>
        </div>
        <div class="col-md-6 ps-0">
            <div class="card">
                <div class="card-header d-none">
                    <h4 class="m-0">SHOE DETAIL</h4>
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs w-100 mb-2">
                        <li class="nav-item p-0 hand" @onclick="() => shoeTabActive = true">
                            <a class="nav-link text-success @(shoeTabActive? "active" : "")">SHOE INFORMATIONS</a>
                        </li>
                        <li class="nav-item p-0 hand" @onclick="() => shoeTabActive = false">
                            <a class="nav-link text-success @(shoeTabActive? "" : "active")">
                                TAG INFORMATIONS
                            </a>
                        </li>
                    </ul>
                    @if (sledProduct.ID == 0)
                    {
                        <p class="text-center p-4">Select a shoe to view detail information!</p>
                    }
                    else
                    {
                        @if (shoeTabActive)
                        {
                            <div class="row">
                                <!--Thông tin giầy-->
                                <div class="col-md-6">
                                    <ListItem Title="EPC" Bordered="false">@sledProduct.EPC</ListItem>
                                    <ListItem Title="SKU" Bordered="false">@sledProduct.SKU</ListItem>
                                    <ListItem Title="Model" Bordered="false">@sledProduct.SKU</ListItem>
                                    <ListItem Title="Shoe status" Bordered="false">
                                        <span class="@sledProduct.StatusColor">
                                            @sledProduct.ProductStatus.GetDescription()
                                        </span>
                                    </ListItem>
                                    <ListItem Title="L/R" Bordered="false">
                                        @sledProduct.LR.GetDescription()
