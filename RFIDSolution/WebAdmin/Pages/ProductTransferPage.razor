<div class="card m-2 w-100">
    <div class="row">
        <div class="col-md-2">
            <div class="row h-100 align-items-center">
                <RFReaderConnect @ref="readerConnecter" AntennaId="1" Size="12" OnRead="OnTagRead"></RFReaderConnect>
            </div>
        </div>
        <div class="col-md-10 card card-body">
            <ul class="nav nav-tabs w-100 mb-2">
                <li class="nav-item p-0 hand" @onclick="() => transferIn = false">
                    <a class="nav-link text-danger @(transferIn? "" : "active")"><span class="oi oi-arrow-circle-right me-1"></span> TRANSFER OUT</a>
                </li>
                <li class="nav-item p-0 hand" @onclick="() => transferIn = true">
                    <a class="nav-link text-success @(transferIn? "active" : "")">
                        <span class="oi oi-arrow-circle-left me-1"></span>TRANSFER IN
                    </a>
                </li>
            </ul>
            @if (transferIn)
            {
                <h3 class="text-success" style="font-weight: bold">TRANSFER IN</h3>
                <!--Transfer in-->
                <div class="row">
                    @if (products.Count > 0)
                    {
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <FormInputText Title="Return by" @bind-Text="@newProductInout.RETURN_BY" Size="12" Required="true" InValidFeedBack="Please enter return user"></FormInputText>
                                        <div class="col-md-12">
                                            <label>Note</label>
                                            <textarea value="@newProductInout.RETURN_NOTE" @onchange="(e) => newProductInout.RETURN_NOTE = e.Value.ToString()" rows="3" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <ListItem Title="Transfer reason" AlignItem="Alignment.Right" Bordered="false">@newProductInout.TRANSFER_REASON</ListItem>
                                    <ListItem Title="Transfer to" AlignItem="Alignment.Right" Bordered="false">@newProductInout.TRANSFER_TO</ListItem>
                                    <ListItem Title="Transfer by" AlignItem="Alignment.Right" Bordered="false">@newProductInout.TRANSFER_BY</ListItem>
                                
                                    <ListItem Title="Document no" Bordered="false">@newProductInout.REF_DOC_NO</ListItem>
                                    <ListItem Title="Document date" AlignItem="Alignment.Center" Bordered="false">@newProductInout.REF_DOC_DATE</ListItem>
                                    <ListItem Title="Transfer out note" AlignItem="Alignment.Left" Bordered="false">@newProductInout.TRANSFER_NOTE</ListItem>
                                </div>

                                <div class="col-md-12 mt-2 d-flex">
                                    <button class="btn btn-success btn-lg me-4"><span class="oi oi-arrow-circle-left me-1"></span> Transfer In</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label>All shoe transfered</label>

                        </div>
                    }
                    else
                    {
                        <p>Scan a product to view transfer information</p>
                    }
                </div>
            }
            else
            {
                <h3 class="text-danger" style="font-weight: bold">TRANSFER OUT</h3>
                <!--Transfer out-->
                <Form OnValidSubmit="() => { }">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <FormInputText Title="Transfer reason" @bind-Text="@newProductInout.TRANSFER_REASON" Required="true" Size="12" InValidFeedBack="Please enter transfer reason"></FormInputText>
                                <FormInputText Title="Transfer to" @bind-Text="@newProductInout.TRANSFER_TO" Size="3"></FormInputText>
                                <FormInputText Title="Transfer by" @bind-Text="@newProductInout.TRANSFER_BY" Required="true" Size="3" InValidFeedBack="Please enter transfer user"></FormInputText>
                                <FormInputText Title="Document no" @bind-Text="@newProductInout.REF_DOC_NO" Size="3"></FormInputText>
                                <FormInputText Title="Document date" @bind-Text="@newProductInout.REF_DOC_DATE" Size="3"></FormInputText>
                                <div>
                                    <label>Note</label>
                                    <textarea value="@newProductInout.TRANSFER_NOTE" @onchange="(e) => newProductInout.NOTE = e.Value.ToString()" rows="3" class="form-control"></textarea>
                                </div>
                                <div class="col-md-12 mt-2 d-flex">
                                    <button type="submit" class="btn btn-danger btn-lg" @onclick="async () => { await transferOut(); }"><span class="oi oi-arrow-circle-right me-1"></span> Transfer Out</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-success">Reason list</label>
                            <div class="list-group w-100" style="max-height: 200px; overflow-y: auto; border: 1px solid gray">
                                @foreach (string reason in reasonsList)
                                {
                                    <button type="button" @onclick="() => { newProductInout.TRANSFER_REASON = reason; }"
                                            class="list-group-item list-group-item-action @(newProductInout.TRANSFER_REASON == reason? "active" : "")">
                                        @reason
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </Form>
            }
        </div>
    </div>
</div>

<div class="m-2">
